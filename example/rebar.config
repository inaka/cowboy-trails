%% -*- mode: erlang;erlang-indent-level: 2;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et

%% == Erlang Compiler ==

%% Erlang compiler options
{erl_opts,
 [warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_untyped_record,
  debug_info]}.

%% == Dependencies ==

{deps,
 [{mixer, "1.2.0", {pkg, inaka_mixer}},
  trails]}. % checked out

{project_plugins, [rebar3_lint, rebar3_hank, rebar3_format]}.

%% == Shell (for interactive example) ==

{shell, [{apps, [cowboy, trails, example]}, {config, "rel/sys.config"}]}.

%% == Release (for CI) ==

{relx,
 [{include_src, false},
  {extended_start_script, true},
  {release, {example, "0.1"}, [example, sasl]},
  {sys_config, "rel/sys.config"}]}.

%% == Alias ==

{alias, [{test, [dialyzer, lint, hank]}]}.

%% == hank ==

{hank, [
    {ignore, [
        "_build/**",
        "_checkouts/**"
    ]}
]}.
